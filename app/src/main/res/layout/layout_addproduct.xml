<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud">

    <Button
        android:id="@+id/btnBackAdd"
        android:layout_width="132dp"
        android:layout_height="39dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/btnlgin"
        android:text="Back"
        android:textColor="#FDFDFD"
        app:layout_constraintEnd_toEndOf="@+id/btnCreate"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="@+id/btnCreate"
        app:layout_constraintTop_toBottomOf="@+id/btnCreate" />

    <EditText
        android:id="@+id/txtPriceAdd"
        android:layout_width="238dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/textplant"
        android:drawableStart="@drawable/group"
        android:ems="10"
        android:hint="Price"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txtTypeAdd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtTypeAdd"
        app:layout_constraintTop_toBottomOf="@+id/txtTypeAdd" />

    <EditText
        android:id="@+id/txtCountryAdd"
        android:layout_width="240dp"
        android:layout_height="41dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/textplant"
        android:drawableStart="@drawable/group_8"
        android:ems="10"
        android:hint="Country"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txtPriceAdd"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtPriceAdd"
        app:layout_constraintTop_toBottomOf="@+id/txtPriceAdd" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:text="ADD PRODUCT"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtTypeAdd"
        android:layout_width="240dp"
        android:layout_height="49dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/textplant"
        android:drawableStart="@drawable/vector__2_"
        android:ems="10"
        android:hint="Type"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.691"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="145dp"
        android:layout_height="42dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/btnlgin"
        android:text="Create"
        android:textColor="#FDFDFD"
        app:layout_constraintEnd_toEndOf="@+id/txtCountryAdd"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/txtCountryAdd"
        app:layout_constraintTop_toBottomOf="@+id/txtCountryAdd" />
</androidx.constraintlayout.widget.ConstraintLayout>